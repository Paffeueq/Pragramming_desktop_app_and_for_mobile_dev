@page
@model ContactFormTest.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<h2>Contact us</h2>

@if (Model.Submitted)
{
    <div class="alert alert-success">Dziękujemy, Twoja wiadomość została wysłana.</div>
}
else
{
    <form method="post">
        <div class="mb-3">
            <label asp-for="Input.Name" class="form-label">Imię</label>
            <input asp-for="Input.Name" class="form-control" />
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">Email</label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Message" class="form-label">Wiadomość</label>
            <textarea asp-for="Input.Message" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Input.Message" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Wyślij</button>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
